{
  "manifest_version": 2,

  "name": "NYC Restaurant Health Inspection Letter Grade",
  "description": "Displays the health inspection letter grade for restaurants in New York City on Yelp, Menupages, Opentable and Foursquare",
  "version": "0.6.2",
  "homepage_url": "https://github.com/CarlosCuevas",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
     "webNavigation"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
   "content_scripts": [{
        "matches": [
          "*://*.yelp.com/biz/*",
          "*://*.menupages.com/*",
          "*://*.opentable.com/*",
          "*://*.grubhub.com/*",
          "*://*.seamless.com/*",
          "*://*.ubereats.com/*"
        ],
        "css": ["inspectionStyles.css"],
        "js": ["main.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": ["images/*.png"]
}
